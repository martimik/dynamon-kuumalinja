<Window x:Class="Dynamon_kuumalinja.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dynamon_kuumalinja"
        mc:Ignorable="d"
        Title="Chat" Height="720" Width="1280">
    <Grid>
        <DockPanel>
            <TextBlock x:Name="txbchatTitle" Text="Dynamon kuumalinja" DockPanel.Dock="Top" FontSize="14" Height="30" Margin="20,20,20,20"/>
            <TextBox x:Name="txbMessage" Text="Send message" DockPanel.Dock="Bottom" Height="30" Width="950" HorizontalAlignment="Left" Margin="20,20,20,20"></TextBox>
            <StackPanel  x:Name="txbChatWindow" DockPanel.Dock="Left" VerticalAlignment="Top" Margin="20,0,0,0" Height="550" Width="950"/>
            <Button x:Name="btnLogout" Content="Logout" Margin="0,0,20,0" DockPanel.Dock="Top" HorizontalAlignment="Right" Width="70" Height="35"/>
            <ListBox x:Name="libChannels" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0,20,20,20" Width="250" Height="495" HorizontalContentAlignment="Right" MouseLeftButtonDown="libChannels_MouseLeftButtonDown"/>

        </DockPanel>
    </Grid>
</Window>
