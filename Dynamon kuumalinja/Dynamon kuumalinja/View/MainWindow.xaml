<Window x:Class="Dynamon_kuumalinja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dynamon_kuumalinja"
        mc:Ignorable="d"
        Title="Dynamon kuumalinja" Height="720" Width="1280">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="txbTitle" Text="Dynamon Kuumalinja" TextAlignment="Center" Margin="0,200,0,0" FontSize="20"></TextBlock>
            <TextBlock x:Name="txbUser" Text="Username" TextAlignment="Center" Margin="0,20,0,0" FontSize="14"></TextBlock>
            <TextBox x:Name="txtUser" KeyDown="txtUser_KeyDown" Width="200"  Margin="200,5,200,0" HorizontalContentAlignment="Stretch" FontStyle="Italic"/>
            <TextBlock x:Name="txbPassword" Text="Password" TextAlignment="Center" Margin="0,10,0,0" FontSize="14"></TextBlock>
            <PasswordBox x:Name="pwbPassword" KeyDown="pwbPassword_KeyDown" Width="200" Margin="200,5,200,0" HorizontalContentAlignment="Stretch"></PasswordBox>
            <Button x:Name="btnLogin" Content="Kirjaudu" Click="btnLogin_Click" Width="100" Margin="250,20,250,0" />
        </StackPanel>
    </Grid>
</Window>
