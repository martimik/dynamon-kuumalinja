<Window x:Class="Dynamon_kuumalinja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dynamon_kuumalinja"
        mc:Ignorable="d"
        Title="Dynamon kuumalinja" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="txbUser" Text="User"></TextBlock>
            <TextBox x:Name="txtUser" KeyDown="txtUser_KeyDown"></TextBox>
            <TextBlock x:Name="txbPassword" Text="Password"></TextBlock>
            <PasswordBox x:Name="pwbPassword" KeyDown="pwbPassword_KeyDown"></PasswordBox>
            <Button x:Name="btnLogin" Content="Kirjaudu" Click="btnLogin_Click"></Button>
            
        </StackPanel>
    </Grid>
</Window>
